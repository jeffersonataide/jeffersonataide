---
import { PROJECTS } from "../config";
---

<section class="pt-10">
  <h2 class="text-center">Projects</h2>
  <hr />

  <ul class="flex wrap justify-center">
    {
      PROJECTS.map((project) => (
        <li class="projects-box w-80 m-8 p-8 flex flex-col justify-between border-2 border-violet-200">
          <h3 class="text-violet-700 text-center">{project.name}</h3>
          <a class="p-4" href={project.repo} target="_blank" rel="noopener">
            <img class="h-8 mx-auto" src="/images/git-logo.svg" />
          </a>
          <p class="py-5">{project.description}</p>

          <p class="py-7">
            Tools:
            {project.tools.join(" - ")}
          </p>
          <div class="text-center font-bold text-violet-700">
            <a href={project.link} target="_blank" rel="noopener">
              Use it
            </a>
          </div>
        </li>
      ))
    }
  </ul>
</section>
